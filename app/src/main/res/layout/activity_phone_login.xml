<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".phone_login">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Log In with phone number"
        android:layout_marginStart="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="My Phone Number"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/country_code"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:hint="+91   "
            android:backgroundTint="#ef5d68"/>

        <EditText
            android:id="@+id/phone_no"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Phone number"
            android:backgroundTint="#ef5d68"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Code will be sent to your phone for verification"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="#000000"/>
    <com.dd.processbutton.FlatButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:pb_cornerRadius="20dp"
        app:pb_colorPressed="#efefef"
        app:pb_colorNormal="#efefef"
        android:textColor="#a4a4a4"
        android:text="Continue"/>






</LinearLayout>